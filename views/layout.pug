doctype html
html
    head
        script(src="https://code.jquery.com/jquery-3.5.1.js")

        script(src="https://stackpath.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js")
        link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')

        script(src="https://cdn.datatables.net/v/dt/dt-1.10.20/fc-3.3.0/fh-3.1.6/datatables.min.js")
        link(rel="stylesheet" href="https://cdn.datatables.net/v/dt/dt-1.10.20/fc-3.3.0/fh-3.1.6/datatables.min.css")

        script(src="/javascript/client-side-utils.js")
        script(src="/javascript/jquery-functions.js")
        link(rel='stylesheet' href='/css/style.css')
body
    nav.navbar.navbar-inverse
        .container
            .navbar-header
                button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href='/') Shame The Greedy
            #navbar.collapse.navbar-collapse
                ul.nav.navbar-nav
                    li
                        a(id="home" href='/') Home
                    if user
                        li
                            a(id="upload" href="/leeches/upload") Upload
                ul.nav.navbar-nav.navbar-right
                    if user
                        li
                            a(id="logout" href='/users/logout') Logout
                    else
                        li
                            a(id="register" href='/users/register') Register
                        li
                            a(id="login" href='/users/login') Login
    .container
        != messages('message', locals)
        if errors
            each error in errors
                div(class="alert alert-danger") #{error.msg}
        if session.pagination
            .row
                .col-sm-3
                    include includes/filterPopup
                .col-sm-9
                    | #{session.pagination.totalGreeders} Greeder(s) Found
                    | - Showing Page #{session.pagination.currentPage} of #{session.pagination.totalPages}&nbsp;&nbsp;&nbsp;

                    if session.pagination.currentPage > 1
                        a#firstPage(href='/?showPage=1' class="link-available") |&laquo; First
                    else
                        a#firstPage(href='#' class="link-not-avaliable") |&laquo; First

                    if session.pagination
                        if session.pagination.previousPage
                            a#previousPage(href='/?showPage=' + session.pagination.previousPage class="link-available") &laquo; Previous
                        else
                            a#previousPage(href='#' class="link-not-avaliable") &laquo; Previous

                        if session.pagination.nextPage
                            a#nextPage(href='/?showPage=' + session.pagination.nextPage class="link-available") Next &raquo;
                        else
                            a#nextPage(href='#' class="link-not-avaliable") Next &raquo;

                        if session.pagination.currentPage < session.pagination.totalPages
                            a#lastPage(href='/?showPage=' + session.pagination.totalPages class="link-available") Last &raquo;|
                        else
                            a#lastPage(href='#' class="link-not-avaliable") Last &raquo;|
        block content
        br
        hr
        footer
            p Copyright &copy; 2020
