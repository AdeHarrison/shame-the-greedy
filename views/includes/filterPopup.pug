#gridSystemModal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='gridModalLabel' aria-hidden='true')
    .modal-dialog.modal-lg(role='document')
        .modal-content
            .modal-header
                h5#gridModalLabel.modal-title Grids in modals
                button.close(type='button' data-dismiss='modal' aria-label='Close')
                    span(aria-hidden='true') &times;
            .modal-body
                .container-fluid.bd-example-row
                    .row
                        .col-md-12
                            table#table_id.display
                                thead
                                    tr
                                        th Column 1
                                        th Column 2
                                tbody
                                    tr
                                        td Row 1 Data 1
                                        td Row 1 Data 2
                                    tr
                                        td Row 2 Data 1
                                        td Row 2 Data 2

